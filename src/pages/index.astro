---
import LiquidGlass from '../components/LiquidGlass.astro'
import LiquidText from '../components/LiquidText.astro'
import LiquidButton from '../components/LiquidButton.astro'
import '../styles/global.css'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href={`/favicon.ico?v=${Date.now()}`}/>
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>Liquid Glass CSS - iOS 26 Glassmorphism Effect | Pure CSS & SVG Filters</title>
		<meta name="title" content="Liquid Glass CSS - iOS 26 Glassmorphism Effect | Pure CSS & SVG Filters" />
		<meta name="description" content="Free open-source iOS 26 Liquid Glass UI components. Create stunning glassmorphism effects with pure CSS SVG filters. No JavaScript required. Perfect for modern web design." />
		<meta name="keywords" content="liquid glass, glassmorphism, iOS 26, CSS effects, SVG filters, blur effect, glass UI, frosted glass, backdrop filter, UI components, web design, frontend, CSS animation, refraction effect, chromatic aberration, Apple design, glass morphism, blur glass, transparent UI, modern UI, CSS only, no javascript" />
		<meta name="author" content="Nik Delvin" />
		<meta name="robots" content="index, follow" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://liquid-glass.web.app/" />
		<meta property="og:title" content="Liquid Glass CSS - iOS 26 Glassmorphism Effect" />
		<meta property="og:description" content="Free open-source iOS 26 Liquid Glass UI components. Pure CSS glassmorphism with SVG filters. No JavaScript required." />
		<meta property="og:image" content="https://liquid-glass.web.app/og-image.png" />
		<meta property="og:site_name" content="Liquid Glass CSS" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://liquid-glass.web.app/" />
		<meta property="twitter:title" content="Liquid Glass CSS - iOS 26 Glassmorphism Effect" />
		<meta property="twitter:description" content="Free open-source iOS 26 Liquid Glass UI components. Pure CSS glassmorphism with SVG filters. No JavaScript required." />
		<meta property="twitter:image" content="https://liquid-glass.web.app/og-image.png" />
		<meta name="twitter:creator" content="@nicdelvin" />
		
		<!-- Canonical URL -->
		<link rel="canonical" href="https://liquid-glass.web.app/" />
		
		<!-- Structured Data -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "SoftwareSourceCode",
			"name": "Liquid Glass CSS",
			"description": "iOS 26 Liquid Glass effect recreated with pure CSS SVG filters. Open-source glassmorphism UI components.",
			"author": {
				"@type": "Person",
				"name": "Nik Delvin",
				"url": "https://github.com/nikdelvin"
			},
			"codeRepository": "https://github.com/nikdelvin/liquid-glass",
			"programmingLanguage": ["CSS", "HTML", "SVG", "Astro"],
			"keywords": "glassmorphism, liquid glass, CSS effects, SVG filters, iOS 26, UI components"
		}
		</script>
		
		<!-- Fonts -->
		<link rel="preload" href="/fonts/latin.woff2" as="font" type="font/woff2" crossorigin>
    	<link rel="preload" href="/fonts/latin-ext.woff2" as="font" type="font/woff2" crossorigin>
		<link rel="preload" href="/fonts/symbols.woff2" as="font" type="font/woff2" crossorigin>
	</head>
	<body class="google-sans-flex bg-zinc-950 text-zinc-50 min-h-screen overflow-hidden">
		<div class="absolute inset-0 animate-scroll-bg bg-scroll-size" style="background-image: url('/0052.webp'); background-repeat: no-repeat;"></div>
		<div class="absolute inset-0 w-screen h-screen flex flex-col justify-center items-center gap-8 max-sm:gap-4">
			<LiquidGlass
				width={655}
				height={127}
				radius={50}
				depth={10}
				blur={1}
				chromaticAberration={2}
				color='white'
			>
				<div class="p-8 px-11 text-[63px] leading-none font-extrabold">
					<LiquidText blur={1} chromaticAberration={4} color="black">IOS LIQUID GLASS</LiquidText>
				</div>
			</LiquidGlass>
			<LiquidGlass
				width={655}
				height={160}
				radius={50}
				depth={10}
				blur={1}
				chromaticAberration={2}
				color='transparent'
			>
				<div class="p-8 px-11 text-8xl font-black">
					<LiquidText blur={1} chromaticAberration={4} color="transparent">NIK DELVIN</LiquidText>
				</div>
			</LiquidGlass>
			<LiquidButton w={300} h={60}>
				<a href="https://github.com/nikdelvin/liquid-glass" target="_blank" class="text-2xl font-normal text-white">Contribute on GitHub</a>
			</LiquidButton>
			<div class="text-4xl font-black">
				<LiquidText blur={1} chromaticAberration={4}>OR</LiquidText>
			</div>
			<LiquidButton w={300} h={60} morph>
				<a href="/docs" class="text-2xl font-normal text-black/70">Read Documentation</a>
			</LiquidButton>
			<LiquidGlass
				width={655}
				height={128}
				radius={50}
				depth={10}
				blur={1}
				chromaticAberration={2}
				color='black'
			>
				<div class="p-8 px-11 text-[64px] leading-none font-extrabold">
					<LiquidText blur={1} chromaticAberration={4} color="white">PURE CSS EFFECT</LiquidText>
				</div>
			</LiquidGlass>
		</div>
	</body>
</html>